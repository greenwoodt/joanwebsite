  </div>
</div>
<script>
  document.querySelectorAll('.video-link video').forEach(function(video) {
    video.addEventListener('mouseenter', function() {
      video.loop = true;
      video.play();
    });
    video.addEventListener('mouseleave', function() {
      video.loop = false;
      video.pause();
      video.currentTime = 0;
    });
    video.addEventListener('click', function(e) {
      e.stopPropagation();
    });
  });
</script>
